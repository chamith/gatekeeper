<application name="iplaydeal-webapp" description="iPlayDeal Web Application">
	<securableObjectTypes>
		<securableObjectType name="system" description="System" />
		<securableObjectType name="application" description="iPlayDeal Application" />
	</securableObjectTypes>
	<roles>
		<role name="system_admin" description="system_admin" securableObjectType="system">
			<rightAssignments>
				<right-ref name="view_system" />
				<right-ref name="administer_system" />
			</rightAssignments>
		</role>
		<role name="application_developer" description="application_developer" securableObjectType="system">
			<rightAssignments>
				<right-ref name="view_system" />
				<right-ref name="view_owned_applications" />
				<right-ref name="edit_owned_applications" />
				<right-ref name="create_application" />
			</rightAssignments>
		</role>
		<role name="application_owner" description="application_owner" securableObjectType="application">
			<rightAssignments>
				<right-ref name="edit_application" />
			</rightAssignments>
		</role>
	</roles>
	<rights>
		<right name="view_system" description="view_system" securableObjectType="system" />
		<right name="administer_system" description="administer_system" securableObjectType="system" />
		<right name="view_owned_applications" description="view_owned_applications" securableObjectType="system" />
		<right name="create_application" description="create_application" securableObjectType="system" />
		<right name="edit_owned_applications" description="edit_owned_applications" securableObjectType="system" />
		<right name="edit_application" description="edit_application" securableObjectType="application" />
	</rights>
	<applicationUsers>
		<user-ref name="chamith@iplaydeal.net" applicationRole="system_admin"/>
		<user-ref name="saman@iplaydeal.net" applicationRole="application_developer"/>
		<user-ref name="shabith@iplaydeal.net" applicationRole="application_developer"/>
		<user-ref name="kanchana@iplaydeal.net" applicationRole="application_developer"/>
		<user-ref name="damitha@iplaydeal.net" applicationRole="system_admin"/>
	</applicationUsers>
</application>