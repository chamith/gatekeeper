<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
		<sectionGroup name="businessLine">
			<section name="mvc" type="BusinessLine.MVC.Configuration.MVCConfiguration, BusinessLine.MVC" />
		</sectionGroup>
	</configSections>
	<appSettings>
	</appSettings>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<probing privatePath="ext" />
		</assemblyBinding>
	</runtime>
	<!-- Log4Net configuration section.  Specify logging levels and appenders here. -->
	<log4net>
		<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
			<file value="./logs/BusinessLine.log" />
			<appendToFile value="true" />
			<maximumFileSize value="1000KB" />
			<maxSizeRollBackups value="4" />
			<!-- for patterns see http://logging.apache.org/log4net/release/sdk/log4net.Layout.PatternLayout.html -->
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
			<threshold value="DEBUG" />
		</appender>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
			<threshold value="DEBUG" />
		</appender>
		<!-- Setup the root category, add the appenders and set the default priority -->
		<root>
			<level value="DEBUG" />
			<appender-ref ref="RollingFile" />
			<appender-ref ref="ConsoleAppender" />
		</root>
	</log4net>
	<connectionStrings>
		<add name="BusinessLine" connectionString="data source=127.0.0.1;initial catalog=BusinessLine;user id=app_bl;password=1qaz2wsx@" providerName="System.Data.SqlClient" />
		<add name="BLTransactions" connectionString="data source=127.0.0.1;initial catalog=BLTransactions;user id=app_bl;password=1qaz2wsx@" providerName="System.Data.SqlClient" />
		<add name="Membership" connectionString="data source=127.0.0.1;initial catalog=Membership;user id=app_bl;password=1qaz2wsx@" providerName="System.Data.SqlClient" />	
</connectionStrings>
	<businessLine>
		<mvc>
			<assemblies>
				<add name="default" assemblyName="BusinessLine.Gtk.UI, Version=1.0, Culture=neutral, PublicKeyToken=null" controllerRootNamespace="BusinessLine.Gtk_UI.Controllers" viewRootNamespace="BusinessLine.Gtk_UI.Views" />
			</assemblies>
		</mvc>
	</businessLine>
</configuration>
